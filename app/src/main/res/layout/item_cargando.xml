<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginStart="@dimen/dimen1"
    android:layout_marginEnd="@dimen/dimen1"
    android:layout_marginTop="@dimen/dimen1"
    android:background="@color/blanco"
    app:cardCornerRadius="@dimen/dimRadius"
    android:elevation="@dimen/dimen05">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:layout_marginStart="@dimen/dimen08"
            android:layout_marginTop="@dimen/dimen08"
            android:background="@color/gris1">
        </FrameLayout>

        <FrameLayout
            android:layout_width="100dp"
            android:layout_height="13dp"
            android:background="@color/gris1"
            android:layout_marginStart="8dp"
            android:layout_marginTop="@dimen/dimen02">

        </FrameLayout>

        <FrameLayout
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:background="@color/gris1"
            android:layout_marginStart="8dp"
            android:layout_marginTop="@dimen/dimen03">
        </FrameLayout>

        <FrameLayout
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:background="@color/gris1"
            android:layout_marginStart="8dp"
            android:layout_marginTop="@dimen/dimen03"
            android:layout_marginBottom="@dimen/dimen08">
        </FrameLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>